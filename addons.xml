<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.lstream" name="lstream" version="0.5.9" provider-name="LakeStream">
    <requires>
        <import addon="xbmc.python" version="2.24.0"/>
        <import addon="script.common.plugin.cache" version="0.9.1"/>
        <import addon="plugin.video.youtube" version="2.9.2"/>
        <import addon="script.module.simplejson" version="2.0.10"/>
        <import addon="script.module.urlresolver" optional="true"/>
        <import addon="repository.lstream" version="0.0.4"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="fr">lstream</summary>
        <description lang="fr">lstream est un module de streaming français, trouvez tous vos films, séries et mangas.[CR][CR]Contributeur: Razorex, Kodigoal, Chataigne73, Arias800</description>
        <summary lang="en">lstream</summary>
        <description lang="en">lstream module and a french streaming, find all your movies, TV shows and mangas.[CR][CR]Contributeur: Razorex, Kodigoal, Chataigne73, Arias800</description>
        <platform>all</platform>
    </extension>
</addon>

<addon id="repository.lstream"
        name="lstream Repository"
        version="0.0.4"
        provider-name="Venom">
    <extension point="xbmc.addon.repository" name="lstream XBMC Addon Repository">
        <checksum>https://raw.githubusercontent.com/demodt/lstream/master/addons.xml.md5</checksum>
        <info compressed="false">https://raw.githubusercontent.com/demodt/lstream/master/addons.xml</info>
        <datadir zip="true">https://github.com/demodt/lstream/raw/master/repo</datadir>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary lang="fr">lstream Repository</summary>
        <description lang="fr">Installer lstream</description>
        <summary lang="en">lstream Repository</summary>
        <description lang="en">Download and install lstream</description>
        <platform>all</platform>
    </extension>
</addon>
</addons>
